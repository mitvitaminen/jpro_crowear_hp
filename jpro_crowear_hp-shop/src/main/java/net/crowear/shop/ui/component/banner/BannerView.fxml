<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE HBox>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<HBox xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="net.crowear.shop.ui.component.banner.BannerView"
	alignment="TOP_CENTER">
	<StackPane styleClass="banner">
		<ImageView fx:id="imgBackgoundImageView"
			pickOnBounds="true" styleClass="img-banner-background"
			preserveRatio="true" fitWidth = "1024" />
		<Label text="${controller.lang.label.img.bannerbackground}" />		
	</StackPane>
</HBox>
